{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "lint": {}
    },
    "globalEnv": [
        "EAS_PROJECT_ID",
        "EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "NODE_ENV",
        "CRON_KEY",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING"
    ]
}